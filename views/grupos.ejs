<%- include('partials/_header1') %>

<div class = "row">
    <div class="col-xl-4 ">
        <h1>Grupos</h1>
    </div>
    <div class="col-xl-4 ">
            <button onclick = "location.href='/crearGrupo'"  type="button" class="btn btn-secondary btn-min-width mr-1 mb-1">Añadir</button>
    </div>
    <div class="col-xl-4 ">
            <button onclick = "myFunction()"  type="button" class="btn btn-secondary btn-min-width mr-1 mb-1">Generar con Pensums
            </button>
    </div>
        </div>
    </div>
</div>
<div class="row ">
    <div class="col ">
        <div class="card ">
            <div class="card-header">
                <h4 class="card-title">Grupos Actuales</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">

                    <div class="table-responsive">
                    <table  class="table table-bordered bg-white">
                        <thead class="thead-dark">
                            <th>Codigo</th>
                            <th>Curso</th>
                            <th>Nivel</th>
                            <th>Materia</th>
                            <th>Horario</th>
                            <th>Maestro</th>
                            <th>Opciones</th>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < grupos.length; i++) { %>
                                <tr>
                                    <td> <%= grupos[i].codigo %> </td>
                                    <td> <%= grupos[i].curso %> </td>
                                    <td> <%= grupos[i].nivel %> </td>
                                    <td> <%= grupos[i].materia %> </td>
                                    <td> <%= grupos[i].horario %> </td>
                                    <td> <%= grupos[i].maestro %> </td>
                                    <td><a href="/modificarGrupo/<%= grupos[i]._id%>"><i class="fa fa-pencil" ></i></a>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<a href="/eliminarGrupo/<%= grupos[i]._id%>"><i class="fa fa-trash" ></i></a></td>
                                </tr>
                            <% }%>  
                        </tbody>
                                    
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <script>
        function myFunction() {
          var txt;
          if (confirm("Si genera a partir del pensum, todos los grupos se crearan automaticamente y los grupos actuales serán eliminados!")) {
            window.location.href = '/generarPensum'
        } else {
            window.location.href = '/grupos'
          }
          document.getElementById("demo").innerHTML = txt;
        }
        </script>
