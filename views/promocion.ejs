    <div class="row ">
        <div class="col-12 ">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title">Promocion</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                            <div class="height-400">
                        
    <div class = "row">
        <div class="col-xl-4 col-lg-6 col-md-12">
            <h1>Estudiantes elegibles </h1>        
        </div>
    </div>
    <div class="table-responsive">
        <table  class="table table-bordered bg-white">
            <thead class="thead-dark">
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Curso</th>
                <th>Nivel</th>
                <th>Promedio</th>
                
            </thead>
            <tbody>
                <% var aux = 0 %> 
                <% 
                for(var i = 0; i < estudiantes.length; i++) { %>
                   <% if(arrpro[i] > aux){%>
                    <tr>
                        <td> <%= estudiantes[i].nombre %> </td>
                        <td> <%= estudiantes[i].apellido %> </td>
                        <td> <%= estudiantes[i].curso %> </td>
                        <td> <%= estudiantes[i].nivel %> </td>
                        <td> <%= arrpro[i] %> </td>
                    </tr>
                    <% } %>

                <% } %>  
            </tbody>
                        
        </table>

        <form>
        <input  name = "Promedio" type="number" id="defaultRegisterFormEmail" class="form-control mb-1" >
        <button onclick = "location.href='/promocion/'"  type="button" class="btn btn-secondary btn-min-width mr-1 mb-1">Usar esta metrica</button>
      </form>


        <button class="btn btn-secondary my-4 btn-block waves-effect " id="Metrica" type="submit">Realizar promocion</button>
          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


